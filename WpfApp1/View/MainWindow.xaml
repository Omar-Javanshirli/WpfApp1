<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1">
            <StackPanel>
                <Image Source="{Binding ImagePath,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <Canvas>
                    <Button Canvas.Top="400" Command="{Binding UndoCommand}">
                        <Image Source="/Image/left.png" Width="20" />
                    </Button>
                    <Button Canvas.Top="400" Canvas.Left="60" Command="{Binding RendoCommand}">
                        <Image Source="/Image/right.png" Width="20" />
                    </Button>
                </Canvas>
            </StackPanel>
            
        </Border>
        <Button Background="DeepPink" Content="Take Screen" Command="{Binding ScreenShootCommand}"/>
    </Grid>
</Window>
